# H8/300 instruction set
# reference: https://www.classes.cs.uchicago.edu/archive/2006/winter/23000-1/docs/h8300.pdf

# How is this implemented?!
define pcodeop bcdAdjust;

macro resflags(result) {
	$(Z_FLAG) = (result == 0);
	$(N_FLAG) = (result s< 0);
}

macro movflags(result) {
	$(Z_FLAG) = (result == 0);
	$(N_FLAG) = (result s< 0);
	$(V_FLAG) = 0;
}

macro addflags(operand1, operand2) {
	local AFmask = -1 >> 4;
	$(H_FLAG) = (((operand1 & AFmask) + (operand2 & AFmask)) & (AFmask + 1)) != 0;
	$(V_FLAG) = scarry(operand1, operand2);
	$(C_FLAG) = carry(operand1, operand2);
}

macro subflags3(operand1,operand2) {
  $(H_FLAG) = (operand1 & 0x0F) < (operand2 & 0x0F);
  $(V_FLAG) = sborrow(operand1,operand2);
  $(C_FLAG) = operand1 < operand2;
}

macro subflags11(operand1,operand2) {
  $(H_FLAG) = (operand1 & 0x0FFF) < (operand2 & 0x0FFF);
  $(V_FLAG) = sborrow(operand1,operand2);
  $(C_FLAG) = operand1 < operand2;
}

# maps register names to fields
attach variables [ reg8hi reg8lo ] [ r0h r1h r2h r3h r4h r5h r6h r7h r0l r1l r2l r3l r4l r5l r6l r7l ];

@ifndef ADVANCED
attach variables [ reg16hi reg16lo reg3lo reg3hi ] [ r0 r1 r2 r3 r4 r5 r6 r7];
@endif

# H8/300 instructions

addr8: @imm8 is imm8 { export *:2 imm8; }
addr16: @imm16 is imm16 { export *:2 imm16; }
absaddr8.b: @tmp is imm8 [ tmp = 0xFFFF00 + imm8; ] { export *:1 tmp; }
absaddr16.b: @addr is b15=1 & imm16 [ addr = 0xFF0000 + imm16; ] { export *:1 addr; }
absaddr16.b: @imm16 is b15=0 & imm16 { export *:1 imm16; }
absaddr16.w: @addr is b15=1 & imm16 [ addr = 0xFF0000 + imm16;] { export *:2 addr; }
absaddr16.w: @imm16 is b15=0 & imm16 { export *:2 imm16; }
pcoff8: reloc is simm8 [ reloc=inst_next+simm8; ] { export *:4 reloc; }

src_r8: reg8hi is reg8hi { export reg8hi; }
dst_r8: reg8lo is reg8lo { export reg8lo; }

@ifndef ADVANCED
src_r16: reg16hi is b7=0 & reg16hi { export reg16hi; }
dst_r16: reg16lo is b3=0 & reg16lo { export reg16lo; }
src_r3b1: reg16hi is b7=1 & reg16hi { export reg16hi; }
src_r3b: reg3hi is b7=0 & reg3hi { export reg3hi; }
dst_r3b: reg3lo is b3=0 & reg3lo { export reg3lo; }

regind_src.b: @reg3hi is b7=0 & reg3hi { export *:1 reg3hi; }
#regind_src.w: @reg3hi is b7=0 & reg3hi { export *:2 reg3hi; }

@endif

cc: "ra" is lnyb=0 { export 1:1; }
cc: "rn" is lnyb=1 { export 0:1; }
cc: "hi" is lnyb=2 { tmp:1 = !($(C_FLAG) || $(Z_FLAG)); export tmp; }
cc: "ls" is lnyb=3 { tmp:1 = $(C_FLAG) || $(Z_FLAG); export tmp; }
cc: "cc" is lnyb=4 { tmp:1 = !$(C_FLAG); export tmp; }
cc: "cs" is lnyb=5 { tmp:1 = $(C_FLAG); export tmp; }
cc: "ne" is lnyb=6 { tmp:1 = !$(Z_FLAG); export tmp; }
cc: "eq" is lnyb=7 { tmp:1 = $(Z_FLAG); export tmp; }
cc: "vc" is lnyb=8 { tmp:1 = !$(V_FLAG); export tmp; }
cc: "vs" is lnyb=9 { tmp:1 = $(V_FLAG); export tmp; }
cc: "pl" is lnyb=10 { tmp:1 = !$(N_FLAG); export tmp; }
cc: "mi" is lnyb=11 { tmp:1 = $(N_FLAG); export tmp; }
cc: "ge" is lnyb=12 { tmp:1 = ($(V_FLAG)==$(N_FLAG)); export tmp; }
cc: "lt" is lnyb=13 { tmp:1 = ($(V_FLAG)!=$(N_FLAG)); export tmp; }
