	dst_r16 = rem << 8 | quot;
	resflags(src_r8);
}
:eepmov.b is op16=0x7B5C; op16=0x598F {
	if (r4l != 0) goto <end>;
	<nextbyte>
	local src:4 = zext(r5);
	local dst:4 = zext(r6);
	*:1 dst = *:1 src;
#	*:1 r6 = *:1 r5;
	r5 = r5 + 1;
	r6 = r6 + 1;
	r4l = r4l - 1;
	if (r4l != 0) goto <nextbyte>;
	<end>
}
